<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_foto_pet_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_nome_pet_list"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_toEndOf="@+id/img_foto_pet_list"
        android:layout_toRightOf="@+id/img_foto_pet_list"
        android:text="Nome"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_detalhes_pet_list"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nome_pet_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toEndOf="@+id/img_foto_pet_list"
        android:layout_toRightOf="@+id/img_foto_pet_list"
        android:text="Detalhes" />
</RelativeLayout>